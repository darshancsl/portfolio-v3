{
    "name": "webpack-react-typescript-template",
    "version": "1.0.0",
    "license": "MIT",
    "description": "This is my Personal portfolio. It is made using react and typescript",
    "keywords": [
        "react",
        "typescript",
        "webpack",
        "react-router",
        "styled-components",
        "eslint",
        "prettier",
        "husky",
        "commitlint"
    ],
    "author": "Darshan Lakade <darshan.lakade157@gmail.com> (https://github.com/darshancsl)",
    "homepage": "hhttps://github.com/darshancsl/portfolio-v3#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/darshancsl/portfolio-v3.git"
    },
    "bugs": {
        "url": "https://github.com/darshancsl/portfolio-v3/issues"
    },
    "scripts": {
        "clean": "rimraf -rf ./dist",
        "prepare-icons": "node prepare-icons.js",
        "build": "webpack --progress --mode production",
        "analyze": "webpack --progress --mode production --env analyze",
        "dev": "npx webpack serve --progress --mode none",
        "start": "npx webpack serve --progress --mode development",
        "watch": "npx webpack serve --progress --mode production",
        "lint": "eslint src --ext .js,.ts,.tsx --ignore-pattern '!.*.js'",
        "lint:fix": "eslint src --ext .js,.ts,.tsx --ignore-pattern '!.*.js' --fix",
        "lint-staged": "lint-staged",
        "format": "npm run lint:fix",
        "prettier:fix": "prettier --write",
        "test": "jest",
        "test:watch": "jest --watchAll=true",
        "test:coverage": "rimraf -rf coverage && jest --coverage && cross-env-shell start coverage/lcov-report/index.html",
        "postinstall": "husky install"
    },
    "dependencies": {
        "lint-staged": "^15.2.7",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router-dom": "6.24.0",
        "styled-components": "^6.1.11"
    },
    "devDependencies": {
        "@babel/core": "^7.24.7",
        "@babel/preset-env": "^7.24.7",
        "@babel/preset-react": "^7.24.7",
        "@babel/preset-typescript": "^7.24.7",
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-conventional": "^19.2.2",
        "@svgr/webpack": "^8.1.0",
        "@swc/core": "^1.6.5",
        "@swc/jest": "^0.2.36",
        "@testing-library/jest-dom": "^6.4.6",
        "@testing-library/react": "^16.0.0",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.14.9",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/react-router-dom": "^5.3.3",
        "@types/styled-components": "^5.1.34",
        "@typescript-eslint/eslint-plugin": "^7.14.1",
        "@typescript-eslint/parser": "^7.14.1",
        "babel-loader": "^9.1.3",
        "babel-plugin-styled-components": "^2.1.4",
        "copy-webpack-plugin": "^12.0.2",
        "cross-env": "^7.0.3",
        "css-loader": "^7.1.2",
        "dotenv-webpack": "^8.1.0",
        "esbuild": "^0.21.5",
        "esbuild-loader": "^4.2.0",
        "eslint": "^8.56.0",
        "eslint-plugin-jsx-a11y": "^6.9.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-react": "^7.34.3",
        "eslint-plugin-react-hooks": "^4.6.2",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.6.0",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "mini-css-extract-plugin": "^2.9.0",
        "opn-cli": "^5.0.0",
        "postcss": "^8.4.38",
        "postcss-loader": "^8.1.1",
        "postcss-preset-env": "^9.5.14",
        "prettier": "^3.3.2",
        "rimraf": "^5.0.7",
        "style-loader": "^4.0.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.5.2",
        "webpack": "^5.92.1",
        "webpack-bundle-analyzer": "^4.10.2",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.0.4"
    },
    "lint-staged": {
        "src/**/*.{ts,tsx}": [
            "npm run format",
            "npm run prettier:fix"
        ]
    },
    "engines": {
        "node": ">=8.0.0",
        "npm": ">=6.0.0"
    },
    "main": ".eslintrc.js"
}
